<div class="author">
  <h1 class="author__heading">
    Hi, I am Manolia
  </h1>

  <p class="author__body">
    AI Engineer & Web Developer
  </p>
</div>

<img src="/img/hero-image.jpg" alt="Person looking out through window" class="hero-image" max-width="500">

<section class="articles">
  <h2 class="articles__heading">
    Latest Blogs
  </h2>

  <ul class="article-ul">
    <% blogs.forEach(blog => { %>
    <li>
      <a href="/blog/<%= blog._id %>">
        <span><%= blog.title %></span>
        <span class="article-list__date"><%= blog.createdAt.toDateString() %></span>
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older blogs</a>
  <% } %>

