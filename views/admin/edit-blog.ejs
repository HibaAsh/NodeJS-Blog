<a href="/dashboard">&larr; Back</a>

<div class="admin-title">
  <h2>View / Edit blog</h2>

  <form action="/delete-blog/<%= blog._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>
</div>

<form action="/edit-blog/<%= blog._id %>?_method=PUT" method="POST">
  <label for="title">
    <b>Title</b>
  </label>
  <input type="text" placeholder="<%= blog.title %>" name="title" value="<%= blog.title %>">
  
  <label for="body">
    <b>Content</b>
  </label>
  <textarea name="body" cols="50" rows="10" placeholder="<%= blog.body %>">
    <%= blog.body %>
  </textarea>

  <input type="submit" value="Edit" class="btn">
</form>